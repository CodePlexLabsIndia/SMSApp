@using SMSApp.Entities
@using SMSApp.Controllers
@{
    ViewBag.Title = "AddProfessor";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
@model UserInfoEntity
@{Html.BeginForm("EducationDetails", "Student", FormMethod.Post, new { id = "frm_edu_info", dialog = "false", enctype = "multipart/form-data" });}
<script src="~/Scripts/jquery-ui.js"></script>
<div class="page-content">
    <h2>Education Details</h2>
    <table cellpadding="4" cellspacing="4">
        <tbody>
            <tr>
                <td>SSC Marks</td>
                <td>
                    @Html.TextBoxFor(m => m.SSCMarks, new { @maxlength = 5, @required = "required" })
                </td>
            </tr>
            <tr>
                <td>SSC Percentage</td>
                <td>
                @Html.TextBoxFor(m => m.SSCPercentage, new { @maxlength = 3, @required = "required" })
            </tr>
            <tr>
                <td>Year of Passing</td>
                <td>
                @Html.TextBoxFor(m => m.YearofPassing, new { @maxlength = 500, @required = "required" })
            </tr>
            <tr>
                <td>Intermediate Marks</td>
                <td>
                    @Html.TextBoxFor(m => m.IntermediateMarks, new { @maxlength = 500, @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Intermediate Percentage</td>
                <td>
                    @Html.TextBoxFor(m => m.IntermediatePercentage, new { @maxlength = 15, @required = "required" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input class="button" type="submit" id="btnSubmit" name="btnSubmit" value="Save Details"></td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" name="hdnerrorMessege" id="hdnerrorMessege" value="@TempData["errorMessege"]" />
</div>

@{Html.EndForm();}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            if ($("#hdnerrorMessege").val() != '') {
                alert($("#hdnerrorMessege").val());
                //$('#frm_edu_info input').attr('value', '');
                //$('#frm_edu_info')[0].reset();
            }
        });
    </script>
}
