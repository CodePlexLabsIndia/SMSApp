@using SMSApp.Entities
@using SMSApp.Controllers
@{
    ViewBag.Title = "View Professor";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
@model StudentFee
@{Html.BeginForm("StudentFee", "Student", FormMethod.Post, new { id = "frm_login", dialog = "false" });}
<script src="~/Scripts/jquery-ui.js"></script>

<div class="page-content">
    <h2>Professor Profile</h2>
    <table>
        <tbody>
           @* <tr>
                <td>School Name</td>
                <td>
                    @Html.TextBoxFor(m => m.SchoolName, new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Location Name</td>
                <td>
                    @Html.TextBoxFor(m => m.LocationName, new { @required = "required" })
                </td>
            </tr>*@
            <tr>
                <td>Professor Name</td>
                <td>
                    @Html.DropDownList("ddlProfessor", new SelectList(Helper.GetDDLProfessor((int)Role.Professor), "ProffesorID", "ProffesorName"), "--Select--", new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Course</td>
                <td>
                    @Html.DropDownList("ddlCourse", new SelectList(Helper.GetDDLCourse(), "CourseID", "CourseName"), "--Select--", new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Admission Number</td>
                <td>
                    @Html.TextBoxFor(m => m.AdmissionNumber, new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Roll Number</td>
                <td>
                    @Html.TextBoxFor(m => m.RollNumber, new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Fee Receipt Number</td>
                <td>
                    @Html.TextBoxFor(m => m.FeeReceiptNumber, new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td>Payment Date</td>
                <td>
                     
                    @Html.TextBoxFor(m => m.PaymentDate, "{0:yyyy/MM/dd}", new { @required = "required" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Add Fee" class="button">
                </td>
            </tr>
        </tbody>
    </table>

</div>

<input type="hidden" name="hdnerrorMessege" id="hdnerrorMessege" value="@TempData["errorMessege"]" />

@{Html.EndForm();}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            if ($("#hdnerrorMessege").val() != '') {
                alert($("#hdnerrorMessege").val());
                //  $('#frm_add_proff')[0].reset();
            }
            $("#PaymentDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'yy/mm/dd',
                maxDate: +0
            });
        });
    </script>
}

